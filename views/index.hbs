						window.location.href = '/admin'

					}
					else {
						$.ajax({
							url: '/userLogin',
							type: "POST",
							data: {
								display: JSON.stringify(data)
							},
							success: function (data) {
								console.log('success')
								window.location.href = '/verify'

							},
							error: function (err) {
								console.log('error')
							}

						})
					}

				})

			})
		})

	</script>
	<script>
		setTimeout(function() {
		$(".clear").fadeOut().empty();
		}, 5000);
	</script>

	<script>
		let email = document.getElementById("email");
		let phoneno = document.getElementById("phoneno");
		let regno = document.getElementById("regno");
		let first_name = document.getElementById("first_name");
		let last_name = document.getElementById("last_name");

		function checkEmail() {
			let re = /^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
			if (re.test(email.value.trim())) {
				status.push("true")
			}
			else {
				email.value = "";
				email.style.borderColor = "red";
				email.placeholder = "Please enter valid email id"
				status.push("false")
			}
		}

		function checkFirst() {
			if (first_name.value.trim().length == 0) {
				first_name.value = "";
				first_name.style.borderColor = "red";
				first_name.placeholder = "Please enter valid first name"
				status.push("false")
			}
			else {
				status.push("true")
			}
		}

		function checkLast() {
			if (last_name.value.trim().length == 0) {
				last_name.value = "";
				last_name.style.borderColor = "red";
				last_name.placeholder = "Please enter valid last name"
				status.push("false")
			}
			else {
				status.push("true")
			}
		}

