<!DOCTYPE html>
<html>

<head>
    <!-- Title -->
    <title>Admin: Add Questions</title>

    <!-- Meta Tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />

    <!-- Linking CSS -->
    <link rel="stylesheet" href="css/main.css" />
    <link rel="icon" type="image/gif" href="images/favicon.jpg" />

    <!-- No Script -->
    <noscript>
        <link rel="stylesheet" href="css/noscript.css" /></noscript>

    <!-- Particle.js-->
    <script src="js/particles.min.js"></script>

    <!-- JQuery -->
    <script src="js/jquery.min.js"></script>

    <!-- reCaptcha -->
    <script src="https://www.google.com/recaptcha/api.js?render=6Ld_gsYUAAAAAKyxXO0Cn1wezKzIWutm8fuG_gdb"></script>

</head>

<body>

    <div id="preloader"></div>

    <div id="particles-js"></div>

    <!-- Wrapper -->
    <div id="wrapper">

        <!-- Header -->
        <header id="header">
            <img class="img-responsive logo" src="images/Logo_White.png" alt="Logo" />
            <div class="content">
                {{#each errors}}
                <div class="alert alert-danger">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <p>{{this.text}}</p>
                </div>
                {{/each}}
                <div class="inner">
                    <h1>Ready To Give Them A Challenge?</h1>
                    <div class="fields">
                        <form class="add-form" role="form">
                            <p style="color: red">{{msg2}}</p>
                            <div class="field">
                                {{#each arr}}
                                <div>
                                    <h2 align="left"><b>Submission:</b></h2>
                                </div>
                                <ul
                                    style="list-style-type: none;background-color:rgba(245, 245, 245, 0.829);color:black;padding:10px;border-radius:20px;">
                                    <li><b>
                                            <h4 style="color:black;text-align:left;">Name : <u>{{this.name}}</u></h4>
                                        </b></li>
                                    <li><b>
                                            <h4 style="color:black;text-align:left;">Email : <u>{{this.email}}</u></h4>
                                        </b></li>
                                    {{#each this.response}}
                                    <li>
                                        <h6 style="color:rgba(0, 0, 0, 0.774);text-align:left;"><b
                                                style="color:rgb(189, 75, 75);text-align:left;">Question:</b>
                                            {{this.ques}}</h6>
                                        <h6 style="color:black;text-align:left;"><b
                                                style="color:rgb(78, 240, 78);text-align:left;">Answer:</b><b style="color:black;">
                                                {{this.answer}} </b></h6>
                                    </li>
                                    {{/each}}
                                </ul>
                                {{/each}}
                            </div>
                        </form>
                    </div>

                    <a href="/Akshat_Is_Awesome">
                        <button class="primary">Go Back
                        </button>
                    </a>
                    <a href="/adminlogout">
                        <button class="primary">Logout
                        </button>
                    </a>

                </div>

        </header>

        <!-- Footer -->
        <footer id="footer">
            <p class="copyright">&copy; <a href="http://www.codechefvit.com/index.html">CodeChef- VIT</a>.</p>
        </footer>

    </div>

    </header>

    <!-- BG -->
    <div id="bg"></div>

    <!-- Scripts -->
    <script src="js/client.js"></script>
    <script src="js/jquery.min.js"></script>
    <script src="js/browser.min.js"></script>
    <script src="js/breakpoints.min.js"></script>
    <script src="js/util.js"></script>
    <script src="js/main.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>

</body>

</html>